<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'input-block-level' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question_text, "Question", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :question_text, :class => 'input-block-level' %>
    </div>
  </div>

  <%= f.hidden_field :user_id %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
