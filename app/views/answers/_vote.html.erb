<h4 style="text-align:center"><%=answer.votes.count%> </h4>
<% if user_signed_in? %>
  <div style="text-align:center"><%= link_to "UPVOTE", question_answer_upvote_path(answer.question.id, answer.id), method: :put, remote: true %> </div>
<% else%>
  <div style="text-align:center"><%= link_to "UPVOTE", question_answer_upvote_path(answer.question.id, answer.id), method: :put, remote: true , title: "<a href='/users/sign_in'>Please Sign In</a>", rel: 'popover', "data-content"=> "You can't vote unless you are signed in :(", "data-html" => "true"%> </div>
<%end%>
